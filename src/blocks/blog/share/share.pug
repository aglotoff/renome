mixin share()
    .share.dropdown&attributes(attributes)
        button(
            aria-expanded = "false"
            aria-controls = "share"
        ).share__toggle.dropdown__toggle
            | Share
            +icon('share').share__icon

        ul.share__drop.dropdown__drawer#share
            li.share__item
                a(href="javascript:void(0);").share__link Facebook
            li.share__item
                a(href="javascript:void(0);").share__link Twitter
            li.share__item
                a(href="javascript:void(0);").share__link Google+
            li.share__item
                a(href="javascript:void(0);").share__link Pinterest
    // /.share 
