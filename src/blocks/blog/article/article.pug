mixin article(props = {})
    article.article&attributes(attributes)
        header.article__header
            ul.article__cats
                each category in props.categories
                    li.article__cat-item
                        a(href="javascript:void(0);").article__cat-link
                            | #{category}

            h2.article__title
                if props.link
                    a(href=props.link).article__title-link= props.title
                else
                    | #{props.title}

            time(datetime=props.date).article__pubdate
                = moment(props.date).format('MMMM D, YYYY')
        // /.article__header 

        .article__content
            if props.image
                -
                    const mobileJpegSrcSet = `
                        ${props.image}-small.jpg 1x,
                        ${props.image}-medium.jpg 2x
                    `;
                    const desktopJpegSrcSet = `
                        ${props.image}-medium.jpg 1x,
                        ${props.image}-large.jpg 1.5x,
                        ${props.image}-xlarge.jpg 2x
                    `;
                    const mobileWebpSrcSet = `
                        ${props.image}-small.webp 1x,
                        ${props.image}-medium.webp 2x
                    `;
                    const desktopWebpSrcSet = `
                        ${props.image}-medium.webp 1x,
                        ${props.image}-large.webp 1.5x,
                        ${props.image}-xlarge.webp 2x
                    `;

                if (props.link)
                    a(href=props.link)
                        picture
                            source(
                                srcset=mobileWebpSrcSet
                                media="(max-width: 480px)"
                                type="image/webp"
                            )
                            source(
                                srcset=desktopWebpSrcSet
                                type="image/webp"
                            )
                            source(
                                srcset=mobileJpegSrcSet
                                media="(max-width: 480px)"
                                type="image/jpeg"
                            )
                            source(
                                srcset=desktopJpegSrcSet
                                type="image/jpeg"
                            )
                            img(
                                src=`${props.image}-small.jpg`
                                alt=props.title
                            ).article__image
                else
                    picture
                        source(
                            srcset=mobileWebpSrcSet
                            media="(max-width: 480px)"
                            type="image/webp"
                        )
                        source(
                            srcset=desktopWebpSrcSet
                            type="image/webp"
                        )
                        source(
                            srcset=mobileJpegSrcSet
                            media="(max-width: 480px)"
                            type="image/jpeg"
                        )
                        source(
                            srcset=desktopJpegSrcSet
                            type="image/jpeg"
                        )
                        img(
                            src=`${props.image}-small.jpg`
                            alt=props.title
                        ).article__image
            else if props.video
                +video(props.video).article__video
            else if props.carousel
                +blog-carousel({ slides: props.carousel }).article__carousel

            .rich-text.article__text !{props.content}
            // /.article__text 

            if props.link
                a(href=props.link).article__link Continue Reading...
        // /.article__content 

        if props.tags || props.author || props.relatedPosts || props.comments
            footer.article__footer
                .article__footer-top
                    if props.tags
                        +article-tags(props.tags).article__tags

                    +share().article__share
                // /.article__footer-top 
                
                if props.author
                    .article__author
                        +article-author(props.author)
                
                if props.relatedPosts
                    section.article__footer-section
                        +title().article__footer-section-title Read more
                        +related-posts(props.relatedPosts).article__related-posts
                    // /.article__footer-section 

                if props.comments
                    section.article__footer-section
                        +title().article__footer-section-title
                            | #{props.comments.total} comments
                        +comments(props.comments).article__comments
                    // /.article__footer-section 

                    section.article__footer-section#comment-form
                        +title().article__footer-section-title Leave a reply
                        +comment-form().article__comment-form
                    // /.article__footer-section 
            // /.article__footer 
    // /.article 
