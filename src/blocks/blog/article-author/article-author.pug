//-
    name: article-author
    description: Markup for the article author block
    arguments:
        - {object} props - block options
        - {string} props.avatar - author's avatar
        - {string} props.name - author's name
        - {string} props.bio - author's bio

mixin article-author(props = {})
    section.article-author&attributes(attributes)
        -
            const jpegSrcSet = `
                ${props.avatar}.jpg 1x,
                ${props.avatar}@2x.jpg 2x
            `;
            const webpSrcSet = `
                ${props.avatar}.webp 1x,
                ${props.avatar}@2x.webp 2x
            `;
        picture
            source(srcset=webpSrcSet type="image/webp")
            source(srcset=jpegSrcSet type="image/jpeg")
            img(
                src=`${props.avatar}.jpg`
                alt=props.name
            ).article-author__avatar

        .article-author__text
            h3.article-author__name= props.name
            .rich-text.rich-text_small.article-author__bio
                p= props.bio

            ul.article-author__social
                li.article-author__social-item
                    a(href="javascript:void(0);").article-author__social-link
                        +icon('fb', 'Facebook')
                li.article-author__social-item
                    a(href="javascript:void(0);").article-author__social-link
                        +icon('twitter', 'Twitter')
                li.article-author__social-item
                    a(href="javascript:void(0);").article-author__social-link
                        +icon('gplus', 'Google Plus')
