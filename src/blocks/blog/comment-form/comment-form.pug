//-
    name: comment-form
    description: Markup for the comment form block

mixin comment-form()
    form.comment-form(action="#" method="post")&attributes(attributes)
        .comment-form__fields
            input(type="hidden" name="reply-to")

            .comment-form__input-group
                label(
                    for="comment-name"
                    id="comment-name-label"
                ).comment-form__label
                +input({theme: 'small'})(
                    type="text"
                    name="name"
                    id="comment-name"
                    aria-labelledby="comment-name-label"
                    placeholder="Name"
                    required
                ).comment-form__input Name
            // .comment-form__input-group 

            .comment-form__input-group
                label(
                    for="comment-email"
                    id="comment-email-label"
                ).comment-form__label Email
                +input({theme: 'small'})(
                    type="email"
                    name="email"
                    id="comment-email"
                    aria-labelledby="comment-email-label"
                    placeholder="Email"
                    required
                ).comment-form__input
            // .comment-form__input-group 

            .comment-form__input-group.comment-form__input-group_wide
                label(
                    for="comment-message"
                    id="comment-message-label"
                ).comment-form__label Message
                +text-area({theme: 'small'})(
                    name="message"
                    placeholder="Message"
                    id="comment-message"
                    aria-labelledby="comment-message-label"
                    required
                ).comment-form__input
            // .comment-form__input-group 
        // .comment-form__fields 

        +btn({title: 'Post comment'}, 'submit').comment-form__submit
    // .comment-form 
