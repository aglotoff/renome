mixin checkout(data)
    form(action="#" method="post").checkout&attributes(attributes)
        .checkout__customer-details
            .checkout__section
                .checkout__section-inner
                    .checkout__section-header
                        h2.checkout__section-title Billing address

                    .checkout__fields-wrap
                        .checkout__fields
                            .checkout__group.checkout__group_large
                                label(
                                    for = "billing-country"
                                    id  = "label-billing-country"
                                ).checkout__label Country*
                                select(
                                    id              = "billing-country"
                                    name            = "billing_country"
                                    aria-labelledby = "label-billing-country"
                                ).checkout__select
                                    option(value="uk") United Kingdom (UK)
                            
                            .checkout__group
                                label(
                                    for = "billing-first-name"
                                    id  = "label-billing-first-name"
                                ).checkout__label First Name*
                                +input({theme: 'checkout'})(
                                    id              = "billing-first-name"
                                    name            = "billing_first_name"
                                    aria-labelledby = "label-billing-first-name"
                                    required
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "billing-last-name"
                                    id  = "label-billing-last-name"
                                ).checkout__label Last Name*
                                +input({theme: 'checkout'})(
                                    id              = "billing-last-name"
                                    name            = "billing_last_name"
                                    aria-labelledby = "label-billing-last-name"
                                    required
                                ).checkout__input

                            .checkout__group.checkout__group_large
                                label(
                                    for = "billing-company"
                                    id  = "label-billing-company"
                                ).checkout__label Company Name
                                +input({theme: 'checkout'})(
                                    id              = "billing-company"
                                    name            = "billing_company"
                                    aria-labelledby = "label-billing-company"
                                ).checkout__input

                            .checkout__group.checkout__group_large
                                label(
                                    for = "billing-address1"
                                    id  = "label-billing-address1"
                                ).checkout__label Address*
                                +input({theme: 'checkout'})(
                                    id              = "billing-address1"
                                    name            = "billing_address1"
                                    aria-labelledby = "label-billing-address1"
                                    placeholder     = "Street address"
                                    required
                                ).checkout__input
                                +input({theme: 'checkout'})(
                                    id          = "billing-address2"
                                    name        = "billing_address2"
                                    aria-label  = "Apartment, Suite, Unite etc. (optional)"
                                    placeholder = "Apartment, Suite, Unite etc. (optional)"
                                ).checkout__input

                            .checkout__group.checkout__group_large
                                label(
                                    for = "billing-city"
                                    id  = "label-billing-city"
                                ).checkout__label Town / City*
                                +input({theme: 'checkout'})(
                                    id              = "billing-city"
                                    name            = "billing_city"
                                    aria-labelledby = "label-billing-city"
                                    placeholder     = "Town / City"
                                    required
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "billing-county"
                                    id  = "label-billing-county"
                                ).checkout__label County
                                +input({theme: 'checkout'})(
                                    id              = "billing-county"
                                    name            = "billing_county"
                                    aria-labelledby = "label-billing-county"
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "billing-postcode"
                                    id  = "label-billing-postcode"
                                ).checkout__label Postcode*
                                +input({theme: 'checkout'})(
                                    id              = "billing-postcode"
                                    name            = "billing_postcode"
                                    aria-labelledby = "label-billing-postcode"
                                    placeholder     = "Postcode"
                                    required
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "billing-email"
                                    id  = "label-billing-email"
                                ).checkout__label Email address*
                                +input({theme: 'checkout'})(
                                    type            = "email"
                                    id              = "billing-email"
                                    name            = "billing_email"
                                    aria-labelledby = "label-billing-email"
                                    required
                                ).checkout__input
                            
                            .checkout__group
                                label(
                                    for = "billing-phone"
                                    id  = "label-billing-phone"
                                ).checkout__label Phone*
                                +input({theme: 'checkout'})(
                                    type            = "tel"
                                    id              = "billing-phone"
                                    name            = "billing_phone"
                                    aria-labelledby = "label-billing-phone"
                                    required
                                ).checkout__input

                        label.checkout__check
                            input(
                                type        = "checkbox"
                                name        = "create_account"
                                value       = "1"
                                data-toggle = "create-account"
                            ).checkout__check-input
                            span.checkout__check-mark(aria-hidden="true")
                            | Create an account?

                        .checkout__account-fields#create-account
                            .text.checkout__account-text
                                p Create an account by entering the information below. If you are a returning customer please login at the top of the page.
                            .checkout__fields
                                .checkout__group.checkout__group_large
                                    label(
                                        for = "account-password"
                                        id  = "label-account-password"
                                    ).checkout__label Account Password*
                                    +input({theme: 'checkout'})(
                                        type            = "password"
                                        id              = "account-password"
                                        name            = "account-password"
                                        aria-labelledby = "label-account-password"
                                        placeholder     = "Password"
                                        required
                                    ).checkout__input
                        // /.checkout__fields 
                    // /.checkout__fields-wrap 
                // /.checkout__section__inner 
            // /.checkout__section 

            .checkout__section
                .checkout__section-inner
                    .checkout__section-header
                        h2.checkout__section-title Shipping address
                        label.checkout__check.checkout__check_inline
                            input(
                                type        = "checkbox"
                                name        = "ship_to_different_address"
                                value       = "1"
                                data-toggle = "shipping-fields"
                            ).checkout__check-input
                            span.checkout__check-mark(aria-hidden="true")
                            | Ship to a different address?

                    .checkout__fields-wrap
                        .checkout__fields#shipping-fields
                            .checkout__group.checkout__group_large
                                label(
                                    for = "shipping-country"
                                    id  = "label-shipping-country"
                                ).checkout__label Country*
                                select(
                                    id              = "shipping-country"
                                    name            = "shipping_country"
                                    aria-labelledby = "label-shipping-country"
                                ).checkout__select
                                    option(value="uk") United Kingdom (UK)
                            
                            .checkout__group
                                label(
                                    for = "shipping-first-name"
                                    id  = "label-shipping-first-name"
                                ).checkout__label First Name*
                                +input({theme: 'checkout'})(
                                    id              = "shipping-first-name"
                                    name            = "shipping_first_name"
                                    aria-labelledby = "label-shipping-first-name"
                                    required
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "shipping-last-name"
                                    id  = "label-shipping-last-name"
                                ).checkout__label Last Name*
                                +input({theme: 'checkout'})(
                                    id              = "shipping-last-name"
                                    name            = "shipping_last_name"
                                    aria-labelledby = "label-shipping-last-name"
                                    required
                                ).checkout__input

                            .checkout__group.checkout__group_large
                                label(
                                    for = "shipping-company"
                                    id  = "label-shipping-company"
                                ).checkout__label Company Name
                                +input({theme: 'checkout'})(
                                    id              = "shipping-company"
                                    name            = "shipping_company"
                                    aria-labelledby = "label-shipping-company"
                                ).checkout__input

                            .checkout__group.checkout__group_large
                                label(
                                    for = "shipping-address1"
                                    id  = "label-shipping-address1"
                                ).checkout__label Address*
                                +input({theme: 'checkout'})(
                                    id              = "shipping-address1"
                                    name            = "shipping_address1"
                                    aria-labelledby = "label-shipping-address1"
                                    placeholder     = "Street address"
                                    required
                                ).checkout__input
                                +input({theme: 'checkout'})(
                                    id          = "shipping-address2"
                                    name        = "shipping_address2"
                                    aria-label  = "Apartment, Suite, Unite etc. (optional)"
                                    placeholder = "Apartment, Suite, Unite etc. (optional)"
                                ).checkout__input

                            .checkout__group.checkout__group_large
                                label(
                                    for = "shipping-city"
                                    id  = "label-shipping-city"
                                ).checkout__label Town / City*
                                +input({theme: 'checkout'})(
                                    id              = "shipping-city"
                                    name            = "shipping_city"
                                    aria-labelledby = "label-shipping-city"
                                    placeholder     = "Town / City"
                                    required
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "shipping-county"
                                    id  = "label-shipping-county"
                                ).checkout__label County
                                +input({theme: 'checkout'})(
                                    id              = "shipping-county"
                                    name            = "shipping_county"
                                    aria-labelledby = "label-shipping-county"
                                ).checkout__input

                            .checkout__group
                                label(
                                    for = "shipping-postcode"
                                    id  = "label-shipping-postcode"
                                ).checkout__label Postcode*
                                +input({theme: 'checkout'})(
                                    id              = "shipping-postcode"
                                    name            = "shipping_postcode"
                                    aria-labelledby = "label-shipping-postcode"
                                    placeholder     = "Postcode"
                                    required
                                ).checkout__input
                        // /.checkout__fields 

                        .checkout__fields
                            .checkout__group.checkout__group_large
                                label(
                                    for = "shipping-notes"
                                    id  = "label-shipping-notes"
                                ).checkout__label Order notes
                                +text-area({theme: 'checkout'})(
                                    id              = "shipping-notes"
                                    name            = "shipping_notes"
                                    aria-labelledby = "label-shipping-notes"
                                    placeholder     = "Notes about you order, e.g. special notes for delivery."
                                ).checkout__input
                        // /.checkout__fields 
                    // /.checkout__fields-wrap 
                // /.checkout__section__inner 
            // /.checkout__section 
        // /.checkout__customer-details 

        .checkout__section
            .checkout__section-inner
                .checkout__section-heading
                    h2.checkout__section-title Your order

                .checkout__review-order
                    +review-order(data.order)
            // /.checkout__section__inner 
        // /.checkout__section 

        .checkout__payment
            +payment()
        // /.checkout__payment 

        .checkout__place-order
            +btn({title: 'Place order'}, 'submit').checkout__order-btn(
                name  = "place_order"
                value = "Place order"
            )
        // /.checkout__place-order 
