mixin search()
    // Begin search
    .search&attributes(attributes)
        a(href="javascript:void(0);").search__toggle
            +icon('search', 'Show search form')
    
        .search__popup(role="dialog" aria-hidden="true")
            form.search__form(action="#" method="post")
                input(type="text" placeholder="Search...").search__input
                button(type="submit").search__submit
                    +icon('search', 'Search')
                button(type="button" aria-label="Close").search__close
    // End search
